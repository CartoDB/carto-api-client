{
  "include": [
    "packages/*/src/**/*.ts",
    "examples/**/*.{svelte,ts,tsx,vue}"
  ],
  "compilerOptions": {
    "baseUrl": "./packages",
    "paths": {
      "@carto/core": ["./packages/core/"],
      "@carto/ui": ["./packages/ui/"]
    },
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "skipLibCheck": true
  }
}
