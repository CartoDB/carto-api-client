{
  "include": ["src/**/*.ts", "examples/**/*.{svelte,ts,tsx,vue}"],
  "compilerOptions": {
    "baseUrl": "./packages",
    "outDir": "dist",
    "paths": {
      "@carto/api-client": ["./"]
    },
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true // TODO
  }
}
